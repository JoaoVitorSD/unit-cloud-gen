{
    "description": "JavaScript test coverage analyzer for Docker",
    "devDependencies": {
        "jest": "^29.0.0"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "source.js",
            "**/source.js",
            "**/*.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "json",
            "text"
        ],
        "testEnvironment": "node",
        "testMatch": [
            "**/test.js",
            "**/*.test.js"
        ],
        "verbose": true
    },
    "main": "analyze.js",
    "name": "javascript-test-analyzer",
    "scripts": {
        "test": "jest --coverage"
    },
    "version": "1.0.0"
}